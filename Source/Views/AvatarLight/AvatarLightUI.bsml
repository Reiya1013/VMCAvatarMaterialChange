<bg xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd">
  <vertical pad-top="5" preferred-width="60" child-control-height="false" child-expand-height="false">
    <toggle-setting preferred-width="40" preferred-height="12" text="Ambient Light" value="AmbientLight" on-change="AmbientLightChange"/>
    <slider-setting text="Base Light Boost" value="VMCLightBoost" min="0" max="1" increment="0.01" on-change="VMCLightBoostChange"/>
    <slider-setting text="Ambient Light Boost" value="AmbientLightBoost" min="0" max="1" increment="0.01" on-change="AmbientLightBoostChange"/>
  </vertical>
</bg>
